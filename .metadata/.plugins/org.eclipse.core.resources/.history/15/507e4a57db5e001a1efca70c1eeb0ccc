package com.example.restservice;

import java.util.ArrayList;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class FibonacciController {
		
	@GetMapping("/fibonacci")
	public Fibonacci fibonacci(@RequestParam( name="num")int num) {
		ArrayList<Integer> numero = new ArrayList<Integer>();
		 
		 int x = 0;
		 if(num==0) {
			 numero.add(0);
			 x++;
		 }
		 if(num==1) {
			 numero.add(1);
			 x++;
		 }
		 /*while(num>=(numero.get(i-1)+numero.get(i-2))) {
			 numero.add(numero.get(i-1)+numero.get(i-2));
			 i++;
		 }*/ int y = 0;
		 for(; y < num; y++) {
			 numero.add(numero.get(y-1)+numero.get(y-2));
		 }
			 return new Fibonacci(y,numero);
		 }
}

